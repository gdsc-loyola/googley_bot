# =============================================================================
# Googley Bot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================================================
# Discord Configuration
# =============================================================================
# Get these from Discord Developer Portal: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_APPLICATION_ID=your_application_id_here

# Optional: Multiple guild support (comma-separated)
# DISCORD_GUILD_IDS=123456789012345678,987654321098765432

# Bot Settings
DISCORD_COMMAND_PREFIX=!
DISCORD_DESCRIPTION="Google Developers Guild on Campus - Loyola Discord Bot"
DISCORD_ACTIVITY_NAME="with productivity tools"
DISCORD_ACTIVITY_TYPE=playing  # playing, streaming, listening, watching

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (both development and production)
DATABASE_URL=postgresql+asyncpg://googley:PASSWORD@127.0.0.1:5432/googley_bot_dev

# Production example:
# DATABASE_URL=postgresql+asyncpg://googley:PASSWORD@127.0.0.1:5432/googley_bot_prod

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# GitHub Integration
# =============================================================================
# Personal Access Token or GitHub App credentials
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_ORG=google-developers-guild

# Webhook Configuration
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_WEBHOOK_URL=https://your-domain.com/webhooks/github

# Repository access control (Optional - comma-separated list)
GITHUB_ALLOWED_REPOS=owner/repo1,owner/repo2,owner/repo3

# GitHub App (Alternative to Personal Access Token)
# GITHUB_APP_ID=your_github_app_id
# GITHUB_APP_PRIVATE_KEY_PATH=/path/to/private-key.pem
# GITHUB_APP_INSTALLATION_ID=your_installation_id

# Repository Configuration
GITHUB_DEFAULT_REPOS=repo1,repo2,repo3
GITHUB_NOTIFICATION_CHANNEL_ID=your_channel_id_here

# Discord Webhook for GitHub Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# =============================================================================
# Notion Integration
# =============================================================================
NOTION_TOKEN=secret_your_notion_integration_token_here

# Database IDs (get from Notion database URLs)
NOTION_DATABASE_TASKS=your_tasks_database_id_here
NOTION_DATABASE_TEAM=your_team_database_id_here
NOTION_DATABASE_PROJECTS=your_projects_database_id_here
NOTION_DATABASE_RESOURCES=your_resources_database_id_here

# Notion Settings
NOTION_SYNC_INTERVAL=300  # seconds
NOTION_CACHE_TTL=600      # seconds

# =============================================================================
# Google Calendar Integration (Optional)
# =============================================================================
GOOGLE_CALENDAR_CREDENTIALS_FILE=path/to/google_credentials.json
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com
GOOGLE_CALENDAR_TIMEZONE=UTC

# OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# Redis Configuration (Optional - for caching and task queues)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/ira_bot.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days
LOG_FORMAT="{time} | {level} | {name}:{function}:{line} - {message}"

# Development logging
DEBUG_MODE=false
DISCORD_LOG_LEVEL=INFO

# =============================================================================
# Security & Authentication
# =============================================================================
# Generate a secure secret key for session management
SECRET_KEY=your_super_secret_key_for_jwt_and_sessions

# Encryption key for sensitive data (32 bytes, base64 encoded)
ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded

# API Rate Limiting
API_RATE_LIMIT=100  # requests per minute
API_RATE_LIMIT_WINDOW=60  # seconds

# =============================================================================
# Webhook Server Configuration
# =============================================================================
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
WEBHOOK_BASE_URL=https://your-domain.com

# Environment setting (development/production)
ENVIRONMENT=production

# SSL Configuration (for production)
WEBHOOK_SSL_CERT_PATH=/path/to/ssl/cert.pem
WEBHOOK_SSL_KEY_PATH=/path/to/ssl/private.key

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_GITHUB_INTEGRATION=true
ENABLE_NOTION_INTEGRATION=true
ENABLE_CALENDAR_INTEGRATION=false
ENABLE_TIME_TRACKING=true
ENABLE_ANALYTICS=true
ENABLE_BACKUP=true

# =============================================================================
# Monitoring & Health Checks
# =============================================================================
# Health check URL (like healthchecks.io)
HEALTH_CHECK_URL=https://hc-ping.com/your-uuid-here

# Monitoring endpoints
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_METRICS_PORT=9090

# Performance monitoring
ENABLE_PROFILING=false
PROFILING_SAMPLE_RATE=0.1

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=ira-bot@hirayainteractive.com
SMTP_USE_TLS=true

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours in seconds
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/path/to/backup/directory

# =============================================================================
# Development Settings
# =============================================================================
DEVELOPMENT_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_COMMANDS=true

# Testing
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db
TEST_DISCORD_TOKEN=your_test_bot_token

# =============================================================================
# Celery Configuration (Optional - for background tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC

# =============================================================================
# Timezone & Localization
# =============================================================================
DEFAULT_TIMEZONE=UTC
SUPPORTED_TIMEZONES=UTC,US/Eastern,US/Central,US/Mountain,US/Pacific,Europe/London
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# =============================================================================
# Analytics Configuration
# =============================================================================
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Internal analytics
ANALYTICS_RETENTION_DAYS=90
ENABLE_USAGE_METRICS=true
ENABLE_PERFORMANCE_METRICS=true

# =============================================================================
# Custom Integration Settings
# =============================================================================
# Add any custom integration settings here
# CUSTOM_API_KEY=your_custom_api_key
# CUSTOM_WEBHOOK_URL=https://your-custom-service.com/webhook 
